         point="org.eclipse.core.runtime.products">
      <product
            name="to-do"
            application="org.eclipse.e4.ui.workbench.swt.E4Application">
         <property
               name="appName"
               value="to-do">
         </property>
            <property
               name="lifeCycleURI"
               value="bundleclass://com.vogella.tasks.ui/com.vogella.tasks.ui.lifeCycle.LifeCycleManager">
